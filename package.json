{
  "name": "@pactfi/pactsdk",
  "version": "0.3.0",
  "description": "JavaScript SDK for Pact smart contracts",
  "main": "dist/cjs/@pactfi/pactsdk.js",
  "browser": "dist/browser/@pactfi/pactsdk.min.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pactfi/pact-js-sdk.git"
  },
  "author": "Mateusz Tomczyk <mateusz.tomczyk@ulam.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pactfi/pact-js-sdk/issues"
  },
  "homepage": "https://github.com/pactfi/pact-js-sdk#readme",
  "scripts": {
    "test": "jest",
    "format": "eslint 'src/**/*.{js,ts}' --fix",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "docs": "npx typedoc",
    "deployDocs": "npx typedoc && ./deployDocs.js"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "semi": true,
    "trailingComma": "all"
  },
  "importSort": {
    ".ts": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "dependencies": {
    "algosdk": "^1.14.0",
    "buffer": "^6.0.3",
    "decimal.js": "^10.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "rollup": "^2.66.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.15",
    "typescript": "^4.5.5"
  }
}
