{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist/esm",
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist/**", "rollup.config.js"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "plugin": ["./typedoc.katex.js"],
    "out": "docs"
  }
}
